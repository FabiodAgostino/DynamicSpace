<div class="modern-card">
    <div class="modern-card-header">
        <Row Class="justify-content-between align-items-center">
            <Column ColumnSize="ColumnSize.IsAuto">
                <h2 class="page-title">
                    <i class="fas fa-cogs"></i>
                    @L["Dynamic Controls"]
